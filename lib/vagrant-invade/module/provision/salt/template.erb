    <%= machine_name %>.vm.provision :salt do |salt|
      <% if install_master %>
      salt.install_master = <%= install_master %>
      <% end %>
      <% if no_minion %>
      salt.no_minion = <%= no_minion %>
      <% end %>
      <% if install_syncdir %>
      salt.install_syncdir = <%= install_syncdir %>
      <% end %>
      <% if install_type %>
      salt.install_type = '<%= install_type %>'
      <% end %>
      <% if install_args %>
      salt.install_args = '<%= install_args %>'
      <% end %>
      <% if always_install %>
      salt.always_install = <%= always_install %>
      <% end %>
      <% if bootstrap_script %>
      salt.bootstrap_script = '<%= bootstrap_script %>'
      <% end %>
      <% if bootstrap_options %>
      salt.bootstrap_options = '<%= bootstrap_options %>'
      <% end %>
      <% if version %>
      salt.version = '<%= version %>'
      <% end %>
      <% if minion_config %>
      salt.minion_config = '<%= minion_config %>'
      <% end %>
      <% if minion_key %>
      salt.minion_key = '<%= minion_key %>'
      <% end %>
      <% if minion_id %>
      salt.minion_id = '<%= minion_id %>'
      <% end %>
      <% if minion_pub %>
      salt.minion_pub = '<%= minion_pub %>'
      <% end %>
      <% if grains_config %>
      salt.grains_config = '<%= grains_config %>'
      <% end %>
      <% if masterless %>
      salt.masterless = <%= masterless %>
      <% end %>
      <% if minion_pub %>
      salt.minion_pub = '<%= minion_pub %>'
      <% end %>
      <% if master_config %>
      salt.master_config = '<%= master_config %>'
      <% end %>
      <% if master_key %>
      salt.master_key = '<%= master_key %>'
      <% end %>
      <% if master_pub %>
      salt.master_pub = '<%= master_pub %>'
      <% end %>
      <% if seed_master %>
      salt.seed_master = '<%= seed_master %>'
      <% end %>
      <% if run_highstate %>
      salt.run_highstate = <%= run_highstate %>
      <% end %>
      <% if run_overstate %>
      salt.run_overstate = <%= run_overstate %>
      <% end %>
      <% if orchestration %>
      salt.orchestration = <%= orchestration %>
      <% end %>
      <% if colorize %>
      salt.colorize = <%= colorize %>
      <% end %>
      <% if log_level %>
      salt.log_level = '<%= log_level %>'
      <% end %>
      <% if pillar %>
      salt.pillar = <%= pillar %>
      <% end %>
    end
