
    <%= machine_name %>.vm.provision :puppet do |puppet_apply|
      <% if manifests_path %>
      puppet_apply.manifests_path = '<%= manifests_path %>'
      <% end %>
      <% if manifest_file %>
      puppet_apply.manifest_file = '<%= manifest_file %>'
      <% end %>
      <% if module_path && module_path.kind_of?(String) %>
      puppet_apply.module_path = '<%= module_path %>'
      <% end %>
      <% if module_path && module_path.kind_of?(Array) %>
      puppet_apply.module_path = <%= module_path %>
      <% end %>
      <% if hiera_config_path %>
      puppet_apply.hiera_config_path = '<%= hiera_config_path %>'
      <% end %>
      <% if facter %>
      puppet_apply.facter = <%= facter %>
      <% end %>
      <% if environment %>
      puppet_apply.environment = '<%= environment %>'
      <% end %>
      <% if environment_path %>
      puppet_apply.environment_path = '<%= environment_path %>'
      <% end %>
      <% if options %>
      puppet_apply.options = <%= options %>
      <% end %>
      <% if synced_folder_type %>
      puppet_apply.synced_folder_type = '<%= synced_folder_type %>'
      <% end %>
      <% if synced_folder_args %>
      puppet_apply.synced_folder_args = <%= synced_folder_args %>
      <% end %>
      <% if temp_dir %>
      puppet_apply.temp_dir = '<%= temp_dir %>'
      <% end %>
      <% if working_directory %>
      puppet_apply.working_directory = '<%= working_directory %>'
      <% end %>

    end
